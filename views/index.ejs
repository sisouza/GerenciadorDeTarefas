<%- include('./partials/header') %>   
<body> 
  <%- include('./partials/navbar') %>
    <div class="container">
      <hr>
      <h1>Gerenciador de Tarefas</h1>
      <p>Cadastre e visualize sua lista de tarefas</p>
      <hr>
      <a href="/tarefas" class="btn btn-outline-info">Nova Tarefa</a>
      <% tarefas.forEach(tarefa => { %>
        <br> 
        <hr>
          <div class="card">
            <div class="card-body">
              <h3><%= tarefa.nome %></h3>
            </div>
            <div class="card-footer">
                <a href="/tarefa/<%= tarefa.id %>"><button class="btn btn-outline-info">Visualizar</button></a>
            </div>
          </div>
        <%}) %>
    </div> 
</body> 
<%- include('./partials/footer') %> 